<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.applauncher" name="App Launcher" version="0.5.1" provider-name="Benjamin Hebgen (Takezo36)">
    <requires>
        <import addon="xbmc.python" version="2.24.0" />
        <import addon="script.module.simplejson" version="3.3.0"/>
        <import addon="script.common.plugin.cache" version="2.5.10"/>
    </requires>

    <extension point="xbmc.python.pluginsource" library="plugin.py">
	<provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">app launcher for os apps</summary>
        <description lang="en">app launcher showing app structure provided by the OS. Meaning Startmenu in Windows or .desktop files in linux</description>
        <platform>all</platform>
        <license>GNU GENERAL PUBLIC LICENSE Version 2.1, February 1999</license>
        <source>https://github.com/Takezo36/applauncherkodi</source>
    </extension>
</addon>

    <addon id="repository.Xone" name="repository.Xone" version="0.1.0" provider-name="Senna99">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="repository.Xone">
            <info compressed="false">https://github.com/senna9922/_Xone/addons.xml</info>
            <checksum>https://github.com/senna9922/_Xone/addons.xml.md5</checksum>
            <datadir zip="true">https://github.com/senna9922/_Xone/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>A short summary of this addon</summary>
            <description>The description can be longer. Using [CR] you can create a newline. The use of other markup is not advised.</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
